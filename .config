# Pilih Arsitektur MediaTek MT7621
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y

# Pilih Profil Spesifik Raisecom MSG1500
CONFIG_TARGET_ramips_mt7621_DEVICE_raisecom_msg1500=y

# Masukkan Driver Wi-Fi mt7615 (yang tadi kita patch)
CONFIG_PACKAGE_kmod-mt7615e=y
CONFIG_PACKAGE_kmod-mt7615-common=y
CONFIG_PACKAGE_kmod-mt7615-firmware=y

# Tambahan Dasar (LuCI agar ada tampilan web)
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_luci-i18n-base-id=y
