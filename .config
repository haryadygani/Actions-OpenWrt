# ===============================
# Target (WAJIB BENAR)
# ===============================
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_raisecom_msg1500_x00=y

# ===============================
# Image (SYSUPGRADE ONLY)
# ===============================
CONFIG_TARGET_SYSUPGRADE=y
CONFIG_TARGET_ROOTFS_SQUASHFS=y
# tidak build factory image

# ===============================
# Network dasar
# ===============================
CONFIG_PACKAGE_dnsmasq=y
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_ppp=y
CONFIG_PACKAGE_ppp-mod-pppoe=y

# ===============================
# Ethernet / Switch MT7621
# ===============================
CONFIG_PACKAGE_kmod-mt7530=y
CONFIG_PACKAGE_kmod-gsw-mt7621=y

# ===============================
# WiFi mt76 / mt7615
# ===============================
CONFIG_PACKAGE_kmod-mt76=y
CONFIG_PACKAGE_kmod-mt7615-common=y
CONFIG_PACKAGE_kmod-mt7615e=y
CONFIG_PACKAGE_kmod-mt7615-firmware=y
CONFIG_PACKAGE_wpad-basic-mbedtls=y

# ===============================
# LuCI
# ===============================
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-ssl=y

# ===============================
# Tools ringan
# ===============================
CONFIG_PACKAGE_iperf3=y
